<table class="responsive-table highlight">
  <thead>
    <tr>
      <th>Id</th>
      <th>Question</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><a href="/questions/<%=question['id']%>"><%= question["id"] %></a></td>
        <td><a href="/questions/<%=question['id']%>"><%= question["description"] %></a></td>
        <td>
          <a href="/questions/<%=question['id']%>/answers">View Answers</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<a href="/questions/new" class="waves-effect waves-light btn">Create New Question</a>
